<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:id="@+id/fragment_history_menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/twentyDP"
        android:orientation="horizontal"
        android:background="?attr/backgroundcolor"
        android:weightSum="10"
        tools:context=".ui.bottom_sheet.ChoosePhotoBottomDialogFragment"
        >

        <TextView
            android:layout_weight="@dimen/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_gallery_select"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/select_gallery"
            android:drawablePadding="@dimen/twoDP"
            android:text="@string/gallery"/>
        <TextView
            android:layout_weight="@dimen/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_camera_select"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/select_camera"
            android:drawablePadding="@dimen/twoDP"
            android:text="@string/camera"/>


    </LinearLayout>

</layout>